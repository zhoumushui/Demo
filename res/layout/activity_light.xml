<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.zms.demo.ImageLayout
            android:id="@+id/light001"
            android:layout_width="@dimen/image_layout_width_x2"
            android:layout_height="@dimen/image_layout_height_x2" />

        <com.zms.demo.ImageLayout
            android:id="@+id/light002"
            android:layout_width="@dimen/image_layout_width_x2"
            android:layout_height="@dimen/image_layout_height"
            android:layout_toRightOf="@id/light001" />

        <com.zms.demo.ImageLayout
            android:id="@+id/light003"
            android:layout_width="@dimen/image_layout_width_x2"
            android:layout_height="@dimen/image_layout_height"
            android:layout_below="@id/light002"
            android:layout_toRightOf="@id/light001" />

        <com.zms.demo.ImageLayout
            android:id="@+id/light004"
            android:layout_width="@dimen/image_layout_width"
            android:layout_height="@dimen/image_layout_height"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/light001" />

        <com.zms.demo.ImageLayout
            android:id="@+id/light005"
            android:layout_width="@dimen/image_layout_width"
            android:layout_height="@dimen/image_layout_height"
            android:layout_below="@id/light001"
            android:layout_toRightOf="@id/light004" />

        <com.zms.demo.ImageLayout
            android:id="@+id/light006"
            android:layout_width="@dimen/image_layout_width"
            android:layout_height="@dimen/image_layout_height"
            android:layout_below="@id/light003"
            android:layout_toRightOf="@id/light005" />

        <com.zms.demo.ImageLayout
            android:id="@+id/light007"
            android:layout_width="@dimen/image_layout_width"
            android:layout_height="@dimen/image_layout_height"
            android:layout_below="@id/light003"
            android:layout_toRightOf="@id/light006" />
    </RelativeLayout>

</ScrollView>