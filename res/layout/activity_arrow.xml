<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.zms.demo.ImageLayout
            android:id="@+id/arrow001"
            android:layout_width="@dimen/image_layout_width"
            android:layout_height="@dimen/image_layout_height" />

        <com.zms.demo.ImageLayout
            android:id="@+id/arrow002"
            android:layout_width="@dimen/image_layout_width"
            android:layout_height="@dimen/image_layout_height"
            android:layout_toRightOf="@id/arrow001" />

        <com.zms.demo.ImageLayout
            android:id="@+id/arrow003"
            android:layout_width="@dimen/image_layout_width"
            android:layout_height="@dimen/image_layout_height"
            android:layout_toRightOf="@id/arrow002" />

        <com.zms.demo.ImageLayout
            android:id="@+id/arrow004"
            android:layout_width="@dimen/image_layout_width"
            android:layout_height="@dimen/image_layout_height"
            android:layout_toRightOf="@id/arrow003" />
    </RelativeLayout>

</ScrollView>